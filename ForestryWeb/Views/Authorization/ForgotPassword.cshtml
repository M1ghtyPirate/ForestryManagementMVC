@{
    ViewData["Title"] = "Запрос на восстановление пароля";
}
@model User

<div class="page-content-center page-content-auth">
    <h2>Введите логин.</h2>
    <form asp-action="forgotpassword" asp-controller="authorization">
        <div>
            <label asp-for="Login">Логин</label>
            <input id="Login" type="text" asp-for="Login" required value="@Model?.Login" onblur="trimLogin()"/>
            <div class="warning" hidden="@(!(Model != null && Model.Login == null))">Пользователь не найден.</div>
            <div class="warning" hidden="@(!(Model != null && Model.Login != null && Model.Email == null))">Для указанного пользователя не задан Email для восстановления пароля.</div>
        </div>
        <div>
            <input type="submit" value="Запросить" />
        </div>
    </form>
</div>
<script>
    function trimLogin() 
    {
        var login = document.getElementById("Login");
        login.value = login.value.trim();
    }
</script>
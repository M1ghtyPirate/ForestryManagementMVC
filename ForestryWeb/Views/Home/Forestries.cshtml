@{
    ViewData["Title"] = "Лесничества";
}
@model IEnumerable<Tuple<ForestryWeb.Models.Database.Tables.Forestry, ForestryWeb.Models.Database.Tables.User>>

<h2>Список лесничеств</h2>
<p><a asp-action="addforestry">Добавить лесничество</a></p>
<table class="table">
    <tr>
        <th>Название</th>
        <th>Автор</th>
        <th>Дата создания</th>
        <th>Дата изменения</th>
        <th>Редактирование</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><a asp-action="forestry" asp-route-id=@item.Item1.ForestryID>@item.Item1.Name</a></td>
            <td>@item.Item2.Login</td>
            <td>@item.Item1.CreationDate</td>
            <td>@item.Item1.EditDate</td>
            <td><a asp-action="editforestry" asp-route-id=@item.Item1.ForestryID>Изменить</a><br /><a asp-action="removeforestry" asp-route-id=@item.Item1.ForestryID>Удалить</a></td>
        </tr>
    }
</table>